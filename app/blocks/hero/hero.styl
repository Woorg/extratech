.hero
	display block
	&__in
		@extends .in
		min-height 634px
	&__slider
		overflow hidden
	&__item
		position relative
		padding-top 180px
		overflow hidden
		cursor move
		&:before
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			background-image linear-gradient(135deg, rgba(4, 105, 183, 0.8) 0%, rgba(59, 59, 59, 0.8) 100%)
			content ""
	&__content
		position relative
		padding-top 56px
		padding-bottom 41px
		min-height 632px
		z-index 1
		text-align center
		color #FFF
	&__title
		margin-bottom 30px
		font-family $fb
		font-size 40px
		letter-spacing 0
	&__text
		position absolute
		bottom 40px
		left 0
		width 100%
	.slick-dots
		bottom 10px
		li,
		button
			width 20px
			height 8px
			background-color #3b3b3b
			border-radius 4px
			&.slick-active
				button
					background-color #0469b7


