.sidebar
	padding-top 48px
	display block
	width 242px
	width ratio-percentage(242,1170)
	float left
	+r($d)
		width auto
		float none
		text-align center
	&__block
		margin-bottom 30px
	&__title
		margin-bottom 15px
		font-size 24px
	&__title_heavy
		font-family $fd
		font-size 20px
	&__nav
		margin-left 5px
	&__item
		position relative
		margin-bottom 0
		line-height 1.4
		&:after
			position absolute
			top 2px
			left -7px
			content "-"
			+r($d)
				display none
		&:last-child
			margin-bottom 0
		&.current-menu-item,
		&:hover
			a
				font-family $fd
	a
		font-family $fb
		font-size 20px
		text-decoration none
		color #020202

	// &__filter

	&__filter-item
		line-height 1.4
	// &__filter-link


.side-contacts
	margin-bottom 20px
	&__title
		margin-bottom 5px
		font-size 20px
	&__text
		font-size 18px
		line-height 1.4

