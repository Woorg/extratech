mixin sidebar()
	aside.sidebar
		.sidebar__block
			h2.sidebar__title Основные услуги
			ul.sidebar__nav
				li.sidebar__item
					a.sidebar__link(href="#") Умный дом
				li.sidebar__item.current-menu-item
					a.sidebar__link(href="#") Освещение
				li.sidebar__item
					a.sidebar__link(href="#") Управление климатом
				li.sidebar__item
					a.sidebar__link(href="#") Безопасность
				li.sidebar__item
					a.sidebar__link(href="#") Видеонаблюдение
				li.sidebar__item
					a.sidebar__link(href="#") Установка Hi

		.sidebar__block
			h2.sidebar__title Дополнительные услуги
			ul.sidebar__nav
				li.sidebar__item
					a.sidebar__link(href="#") Дизайн интерьера
				li.sidebar__item
					a.sidebar__link(href="#") Отделочные работы
				li.sidebar__item
					a.sidebar__link(href="#") Электромонтажные работы

mixin sidebar-news()
	aside.sidebar
		.sidebar__block
			h2.sidebar__title.sidebar__title_heavy Последние новости
			ul.sidebar__filter
				li.sidebar__filter-item
					a.sidebar__filter-link(href="#") За неделю
				li.sidebar__filter-item
					a.sidebar__filter-link(href="#") За месяц
				li.sidebar__filter-item
					a.sidebar__filter-link(href="#") За год


mixin sidebar-contacts()
