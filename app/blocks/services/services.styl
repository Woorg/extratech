.services
	display block
	color #FFF
	&__in
		@extends .in
	&__title
		margin-bottom 22px
		font-family $fd
		font-size 36px
		color #e5e2e2
		text-align center
		letter-spacing tracking(50)
	&__list
		font-size 0
	&__link
		position relative
		display block
		min-height 300px
		color #fff
		text-decoration none
		&:after
			position absolute
			z-index 12
			top 0
			left 0
			right 0
			bottom 0
			// background-color rgba(0,0,0, .6)
			content ""
		&:hover
			&:after
				background-color rgba(0,198,255, .6)
			.services__item-w,
			.services__item-w-2,
			.services__item-w-3,
			.services__item-w-4,
			.services__item-w-5
				&:after
					z-index 1
					background-color rgba(0,198,255, .6)
			.services__cont
				z-index 13

	&__item
		position relative
		border-top 9px solid $bg-c
		display inline-block
		vertical-align top
		width 276px
		min-height 308px
		height 308px
		background-position 50% 0
		background-size cover
		background-repeat no-repeat
		text-align center
		transition background-image .2s ease
		.services__link
			padding-top 54px
			text-align center
		+r($d)
			display block
			width auto
			min-height auto
