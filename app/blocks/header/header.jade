mixin header()
	header.header
		.header__in
			.header__left
				a.header__logo.logo(href="#logo")
					+icon('logo', true).logo__icon
					span.logo__text Extratech
				.header__lang.lang
					a.lang__link.lang__link_active(href="#ua") ua
					a.lang__link(href="#ru") ru
					a.lang__link(href="#eng") eng

			nav.header__nav.nav
				ul.nav__list
					li
						a(href="#link") Новости
					li.current-menu-item
						a(href="#link") Услуги
					li
						a(href="#link") Контакты

			.header__contacts.h-contacts
				.h-contacts__w
					a.h-contacts__phone.phone(href="tel:0505505010") 050 550 50 10
					a.h-contacts__phone.phone(href="tel:0685505010") 068 550 50 10
					a.h-contacts__phone.phone(href="tel:0735505010") 073 550 50 10
				ul.h-contacts__social.social
					li.social__item.social__item_vk
						a.social__link(href="") Vkontakte
					li.social__item.social__item_youtube
						a.social__link(href="") Youtube
					li.social__item.social__item_inst
						a.social__link(href="") Instagram
					li.social__item.social__item_fb
						a.social__link(href="") Facebook
					li.social__item.social__item_pint
						a.social__link(href="") Pinterest


