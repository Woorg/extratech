.header
	position fixed
	z-index 20
	top 0
	left 0
	width 100%
	display block
	background rgba(0,0,0 , .7)
	color #FFF
	&_inner
		background url('../images/general/header-inner.jpg') 50% 0 repeat-x
	&__in
		position relative
		@extends .in
		min-height 180px
		clearfix()
	&__left
		float left
	&__logo
		margin-top 48px
		margin-bottom 9px

	&__nav
		margin-top 58px
		margin-left 122px
		width 560px
		float left

	&__contacts
		position absolute
		top 23px
		right 30px
		width 200px


.logo
	display block
	width 200px
	height 38px
	&__icon
		display block
		width 100%
		height 100%
		fill #0082c0
	&__text
		display block
		hide-text()
.lang
	font-size 16px
	text-transform uppercase
	&__link
		padding-right 5px
		text-decoration none
		color #848383
		&:hover
			color #0469b7
	&__link_active
		color #0469b7

.nav
	&__list
		font-size 0
	li
		margin-left 10px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
		&.current-menu-item,
		&:hover
			a
				border 1px solid #00c6ff
	a
		position relative
		border 1px solid transparent
		padding-top 1px
		padding-right 14px
		padding-bottom 3px
		padding-left 14px
		font-size 24px
		color #ffffff
		text-decoration none
		border-radius 5px

.h-contacts
	&__w
		margin-bottom 12px

	&__phone
		margin-bottom 14px
		line-height 1
		&:last-child
			margin-bottom 0


.phone
	position relative
	padding-left 30px
	display block
	color #ffffff
	font-size 25px
	text-decoration none

	&:after
		position absolute
		top 50%
		left 0
		margin-top -10px
		sprite($phone_icon)
		content ""


.phone_horiz
	margin-left 15px
	display inline-block
	vertical-align top
	&:first-child
		margin-left 0

.social
	text-align center

	&__item
		margin-left 10px
		display inline-block
		vertical-align middle
		&:first-child
			margin-left 0
	&__link
		display block
		hide-text()
	&__item_vk
		.social__link
			sprite($vk_icon)
	&__item_youtube
		.social__link
			sprite($youtube_icon)
	&__item_inst
		.social__link
			sprite($inst_icon)
	&__item_fb
		.social__link
			sprite($fb_icon)
	&__item_pint
		.social__link
			sprite($pint_icon)
	&__item_skype
		.social__link
			sprite($skype_icon)
	&__item_email
		.social__link
			sprite($email_icon)


