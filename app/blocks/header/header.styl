.header
	position fixed
	z-index 20
	top 0
	left 0
	width 100%
	display block
	background rgba(0,0,0 , .7)
	color #FFF
	&_inner
		background rgba(0,0,0 , .7) url('../images/general/header-inner.jpg') 50% 0 repeat-x
		+r($d)
			position relative
			background-image none
			background-color rgba(0,0,0 , .4)
	+r($d)
		position relative
		background-color rgba(0,0,0 , .4)

	&__in
		position relative
		@extends .in
		min-height 180px
		clearfix()
		+r($d)
			min-height 560px

	&__left
		float left
		+r($d)
			// margin auto
			width 227px
			float none
	&__logo
		margin-top 48px
		margin-bottom 9px
		+r($d)
			margin-top 12px
	&__nav-w
		position relative
		margin-top 58px
		margin-left 122px
		width 560px
		float left
		+r($d)
			position absolute
			top 23px
			right 30px
			margin-top 0
			margin-left 0

	&__contacts
		position absolute
		top 23px
		right 30px
		width 200px
		+r($d)
			position relative
			top 40px
			right auto
			margin auto
			width 367px
			text-align center


.logo
	display block
	width 200px
	height 38px
	+r($d)
		width 179px
		height 33px

	&__icon
		display block
		width 100%
		height 100%
		fill #0082c0
	&__text
		display block
		hide-text()
.lang
	position absolute
	bottom -20px
	left -320px
	font-size 16px
	text-transform uppercase
	+r($d)
		bottom 0
		left 0

	&__link
		padding-right 5px
		text-decoration none
		color #848383
		tr(color .2s ease)
		&:hover
			color #0469b7
	&__link_active
		color #0469b7

.nav
	&__list
		font-size 0
	&__item
		margin-left 10px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
		&.current-menu-item,
		&:hover
			a
				border 1px solid #00c6ff
		a
			position relative
			border 1px solid transparent
			padding-top 1px
			padding-right 14px
			padding-bottom 3px
			padding-left 14px
			font-size 24px
			color #ffffff
			text-decoration none
			border-radius 5px
			tr(border .2s ease)

	&__list-w
		+r($d)
			display none

	&__trigger
		position absolute
		z-index 2
		top 0
		right 0
		display none
		+r($d)
			display block
	&__trigger-button
		border none
		display block
		cursor pointer
		background-color transparent
		sprite($trigger_menu)
		hide-text()

	&__trigger-button_close
		sprite($trigger_menu_close)

	&__trigger-input
		display none
		&:checked ~
			.nav__list-w
				position absolute
				z-index 1
				top -23px
				right -30px
				width auto
				min-height 382px
				display block
				background-color #64c8fa
				+rmin($d)
					display none
				+r($d)
					min-width 386px
				+r($t)
					min-width 346px
				+r($m-l)
					min-width 300px
				.nav__list
					margin-top 100px
					margin-bottom 63px
				.nav__item
					margin-left 0
					display block
					a
						padding-left 36px
						padding-right 36px
						display block
						font-size 30px
						tr(background .2s ease)
					&.active,
					&:hover
						a
							background #07a9fa
				.lang
					left 38px
					bottom 20px
				.lang__link
					font-size 24px
					color #afe1fa
					&:hover
						color #fdfdfe
				.lang__link_active
					color #fdfdfe

.h-contacts
	&__w
		margin-bottom 12px
	&__phone
		margin-bottom 14px
		line-height 1
		&:last-child
			margin-bottom 0


.phone
	position relative
	padding-left 30px
	display inline-block
	color #ffffff
	font-size 25px
	text-decoration none
	&:after
		position absolute
		top 50%
		left 0
		margin-top -10px
		sprite($phone_icon)
		content ""


.phone_horiz
	margin-left 15px
	display inline-block
	vertical-align top
	&:first-child
		margin-left 0

.social
	text-align center
	+r($d)
		margin-top 30px
	&__item
		margin-left 10px
		display inline-block
		vertical-align middle
		&:first-child
			margin-left 0
	&__link
		display block
		hide-text()
	&__item_vk
		.social__link
			sprite($vk_icon)
			+r($d)
				sprite($vk_big_icon)

	&__item_youtube
		.social__link
			sprite($youtube_icon)
			+r($d)
				sprite($youtube_big_icon)

	&__item_inst
		.social__link
			sprite($inst_icon)
			+r($d)
				sprite($inst_big_icon)

	&__item_fb
		.social__link
			sprite($fb_icon)
			+r($d)
				sprite($fb_big_icon)

	&__item_pint
		.social__link
			sprite($pint_icon)
			+r($d)
				sprite($pint_big_icon)

	&__item_skype
		.social__link
			sprite($skype_icon)
			+r($d)
				sprite($skype_big_icon)

	&__item_email
		.social__link
			sprite($email_icon)
			+r($d)
				sprite($email_big_icon)

	&__item_text
		margin-left 0
		margin-bottom 20px
		width 50%
		display none
		+r($d)
			display inline-block
		.social__link
			position relative
			padding-left 50px
			text-indent 0
			font-size 18px
			color #fffefe
			line-height 40px
			text-decoration none
			text-align left
			&:after
				position absolute
				z-index 1
				top 0
				left 0
				content ""

	&__item_phone
		.social__link
			&:after
				sprite($phone_icon)
				+r($d)
					sprite($phone_big_icon)

	&__item_skype-big
		.social__link
			&:after
				sprite($skype_icon)
				+r($d)
					sprite($skype_big_icon)

	&__item_email-big
		.social__link
			&:after
				sprite($email_icon)
				+r($d)
					sprite($email_big_icon)
