.header
	position fixed
	z-index 20
	top 0
	left 0
	width 100%
	display block
	background rgba(0,0,0 , .7)
	color #FFF

	&__in
		position relative
		@extends .in
		min-height 180px
		clearfix()
	&__left
		float left
	&__logo
		margin-top 48px
		margin-bottom 9px

	&__nav
		margin-top 58px
		margin-left 137px
		width 560px
		float left

	&__contacts
		position absolute
		top 23px
		right 30px
		width 200px


.logo
	display block
	width 200px
	height 38px
	&__icon
		display block
		width 100%
		height 100%
		fill #0082c0
	&__text
		display block
		hide-text()
.lang
	font-size 16px
	text-transform uppercase
	&__link
		padding-right 5px
		text-decoration none
		color #848383
		&:hover
			color #0469b7
	&__link_active
		color #0469b7

.nav
	&__list
		font-size 0
	li
		margin-left 30px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
	a
		position relative
		font-size 24px
		color #ffffff
		text-decoration none


.h-contacts
	&__w
		margin-bottom 12px

	&__phone
		margin-bottom 14px
		line-height 1
		&:last-child
			margin-bottom 0


.phone
	position relative
	padding-left 30px
	display block
	color #ffffff
	font-size 25px
	text-decoration none

	&:after
		position absolute
		top 50%
		left 0
		margin-top -10px
		sprite($phone_icon)
		content ""


.social
	text-align center
	&__item
		margin-left 10px
		display inline-block
		vertical-align middle
		&:first-child
			margin-left 0
	&__link
		display block
		hide-text()
	&__item_vk
		.social__link
			sprite($vk_icon)
	&__item_youtube
		.social__link
			sprite($youtube_icon)
	&__item_inst
		.social__link
			sprite($inst_icon)
	&__item_fb
		.social__link
			sprite($fb_icon)
	&__item_pint
		.social__link
			sprite($pint_icon)

