.footer
	background-color rgba(0, 0, 0, .7)
	background-image linear-gradient(135deg, rgba(4, 4, 4, 0.3) 0%, rgba(4, 4, 4, 0.3) 0.5%, rgba(4, 105, 183, 0.3) 50%, rgba(4, 4, 4, 0.3) 99.5%, rgba(4, 4, 4, 0.3) 100%)
	&__in
		@extends .in
		padding-top 55px
		padding-bottom 20px
		min-height 243px
		text-align center
	&__logo
		margin 0 auto 55px

	&__phones
		margin-bottom 30px
		font-size 0
		+r($d)
			margin auto
			width 50%
			text-align center
			.phone
				margin-left 0
		+r($t-s)
			width auto

