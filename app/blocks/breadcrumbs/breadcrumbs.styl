.breadcrumbs
	margin-bottom 2px
	display block
	&__list
		font-size 0
	&__item
		position relative
		margin-left 18px
		display inline-block
		vertical-align top
		&:after
			position absolute
			top 1px
			right -13px
			content ">"
			font-size 16px
			line-height 1.67
		&:first-child
			margin-left 0
		&:last-child
			&:after
				display none
	&__link,
	span
		font-size 16px
		color #020202
		text-decoration none
